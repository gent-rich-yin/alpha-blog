<h1>User Signup</h1>

<% if @user.errors.any? %>
    <h2>Errors: <h2>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
    </ul>
<% end %>

<%= form_with scope: :user, url: users_path, local: true, data: { turbo: false } do |f| %>
    <p>
        <%= f.label :username %><br>
        <%= f.text_field :username %>
    </p>
    <p>
        <%= f.label :email %><br>
        <%= f.email_field :email %>
    </p>
    <p>
        <%= f.label :password %><br>
        <%= f.password_field :password %>
    </p>
    <p>
        <%= f.submit "Sign up" %>
    </p>
<% end %>